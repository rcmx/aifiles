{
  "model": "sonnet",
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -c \"(New-Object Media.SoundPlayer ([Environment]::GetFolderPath('UserProfile') + '\\.claude\\hooksounds\\task_complete.wav')).PlaySync()\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -c \"(New-Object Media.SoundPlayer ([Environment]::GetFolderPath('UserProfile') + '\\.claude\\hooksounds\\task_waiting.wav')).PlaySync()\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  }
}